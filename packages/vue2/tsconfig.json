{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "../../dist/vue2/dist/types",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "../../dist/vue2/dist",

    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "target": "ESNext",
    "useDefineForClassFields": true,

    "jsx": "preserve",
    "jsxImportSource": "vue",

    // Recommended
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "lib": [
    "ES2020",
    "DOM",
    "DOM.Iterable"
  ],
  "vueCompilerOptions": {
    "target": 2.7
  },
  "include": [
   "src/**/*.vue", 
   "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
}
