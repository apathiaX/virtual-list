{
  "name": "virtual-list",
  "version": "0.0.1",
  "description": "virtual list",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:release": "pnpm build --tsc && changeset publish",
    "dev:vanilla": "pnpm run -C playground/vanilla dev",
    "dev:vue": "pnpm run -C playground/vue dev",
    "dev:react": "pnpm run -C playground/react dev",
    "dev:vue2": "pnpm run -C playground/vue2 dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "apathiaX",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.9.0",
    "@faker-js/faker": "^8.4.1",
    "@types/react": "^18.3.3",
    "commitizen": "^4.3.0",
    "eslint": "^9.8.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-vue": "^9.28.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,vue}": "eslint --fix"
  }
}
